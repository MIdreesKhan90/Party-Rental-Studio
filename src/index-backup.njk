<script>
    document.addEventListener("DOMContentLoaded", function () {
        if (window.innerWidth >= 768) {
            document
                .querySelectorAll("script[data-src]")
                .forEach(script => {
                    script.setAttribute("src", script.getAttribute("data-src"));
                    script.removeAttribute("data-src");
                });

            const playLottieOnView = (entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // Play the Lottie animation when it's in view
                        entry
                            .target
                            .play();
                    } else {
                        entry
                            .target
                            .stop();
                    }
                });
            };

            const observerOptions = {
                root: null, // relative to the viewport
                threshold: 0.1 // play when 10% of the animation is visible
            };

            // Initialize the IntersectionObserver
            const observer = new IntersectionObserver(playLottieOnView, observerOptions);

            // Select all the Lottie animations on the page
            const lottieElements = document.querySelectorAll('.lottie-animation');

            // Attach the IntersectionObserver to each Lottie animation
            lottieElements.forEach(lottieElement => {
                observer.observe(lottieElement);
            });
        }
    });
</script>